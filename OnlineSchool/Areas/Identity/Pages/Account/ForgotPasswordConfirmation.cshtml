@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}

<div class="container" style="margin-top:100px;margin-bottom:100px">
    <div class="row">
        <div class="col-xl-12">
            <div class="card mx-auto login-card box-shadow">
                <div class="card-body">
                    <h5 style="text-align:center;font-size:30px;font-weight: 300;margin: 10px 0">Forgot password Confirmation</h5>
                    <hr />
                    <p class="text-center">
                        Please check your email to reset your password.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

