@model OnlineSchool.Models.AddTutorModel
@{
    ViewData["Title"] = "Add Tutor";
    Layout = "_AdminLayout";
}

<div class="element-wrapper">
    <h6 class="element-header">
        Manage Tutor
    </h6>
    <div class="element-box">
        <form method="post">
            <h5 class="form-header">
                Add Tutor
            </h5>
            <div class="form-group">
                <label asp-for="Email"> Email address</label>
                <input class="form-control" placeholder="Enter email" type="email" asp-for="Email" data-error="Email address is invalid">
                <span asp-validation-for="Email" class="help-block form-text with-errors form-control-feedback"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fullname">First Name</label>
                <input class="form-control" placeholder="First Name" type="text" asp-for="Fullname" data-error="Full Name address is invalid">
                <span asp-validation-for="Fullname" class="help-block form-text with-errors form-control-feedback"></span>
            </div>
            
            <div class="form-buttons-w">
                <button type="submit" class="btn btn-primary" > Add Tutor</button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

