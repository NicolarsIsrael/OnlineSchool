@model OnlineSchool.Models.EditTutorModel
@{
    ViewData["Title"] = "Admin-Edit Tutor";
    //Layout = "_AdminLayout";
}

<div class="my-4">
    <a asp-action="index">Home</a> >> <a asp-action="tutors">Tutors</a> >>
    <span class="breadcrum-link">Edit tutor</span>
</div>


<div class="element-wrapper">
    <h6 class="element-header mb-3">
        Manage Tutor
    </h6>
    <div class="card mx-auto box-shadow login-card">
        <div class="card-body">
            <div class="element-box">

                <form method="post">
                    <input hidden asp-for="Id" />
                    <h5 class="form-header">
                        Edit Tutor
                    </h5>
                    <div class="form-group">
                        <label asp-for="Email"> Email address</label>
                        <input class="form-control" type="email" asp-for="Email" data-error="Email address is invalid"  readonly>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Fullname">First Name</label>
                        <input class="form-control" type="text" asp-for="Fullname" data-error="Full Name address is invalid">
                        <span asp-validation-for="Fullname" class="text-danger"></span>
                    </div>

                    <div class="form-buttons-w">
                        <button type="submit" class="btn btn-custom-primary">Edit Tutor</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

