@model OnlineSchool.Models.CourseRegModel
@{
    ViewData["Title"] = "Registeration";
}

<h1>Registeration</h1>

<form method="post">
    <table>
        <thead>
            <tr>
                <th></th>
                <th>Code</th>
                <th>Title</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Courses.Count(); i++)
            {
                <input hidden asp-for="Courses[i].Id" />
                <tr>

                    <td style="width:30px">
                        <input asp-for="Courses[i].IsSelected" type="checkbox" />
                    </td>
                    <td>@Model.Courses[i].CourseCode</td>
                    <td>@Model.Courses[i].CourseTitle</td>
                </tr>
            }
        </tbody>
    </table>
    <input type="submit" class="btn custom-primary-btn" value="Register"/>
</form>