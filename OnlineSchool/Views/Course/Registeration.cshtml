@model OnlineSchool.Models.CourseRegModel
@{
    ViewData["Title"] = "Registeration";
    //Layout = "_AdminLayout";
}

<div class="element-wrapper">
    
    <h6 class="element-header">
        Registeration
    </h6>
    <div class="element-box-tp mt-3">
        <div class="table-responsive">
            <form method="post">
                <table class="table table-padded">
                    <thead>
                        <tr>
                            <th></th>
                            <th>
                                Code
                            </th>
                            <th>
                                Title
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Courses.Count(); i++)
                        {
                            <input hidden asp-for="Courses[i].Id" />

                            <tr>
                                <td class="text-center">
                                    <input asp-for="Courses[i].IsSelected" type="checkbox" class="coursesCheckBox" />
                                </td>
                                <td>
                                    <div class="user-with-avatar">
                                        <span>@Model.Courses[i].CourseCode</span>
                                    </div>
                                </td>
                                <td>
                                    <div class="smaller lighter">
                                        @Model.Courses[i].CourseTitle
                                    </div>
                                </td>

                            </tr>

                        }
                    </tbody>
                </table>

                <div class="element-actions">
                    <input type="button" class="mr-2 mb-2 btn btn-sm btn-primary btn-rounded" value="Check all" onclick="selectAll()" />
                    <input type="button" class="mr-2 mb-2 btn btn-sm btn-info btn-rounded" value="Uncheck all"
                           onclick="UnSelectAll()" />
                </div>

                <input type="submit" class="btn btn-custom-primary mt-3" value="Register" />
            </form>
        </div>
    </div>
</div>

<script type="text/javascript">
    function selectAll() {
        var items = document.getElementsByClassName('coursesCheckBox');
        for (var i = 0; i < items.length; i++) {
            if (items[i].type == 'checkbox')
                items[i].checked = true;
        }
    }

    function UnSelectAll() {
        var items = document.getElementsByClassName('coursesCheckBox');
        for (var i = 0; i < items.length; i++) {
            if (items[i].type == 'checkbox')
                items[i].checked = false;
        }
    }
</script>

