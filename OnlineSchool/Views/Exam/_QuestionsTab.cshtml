@model OnlineSchool.Models.ExamModel
<div style="border:1px solid black;padding:8px; width:210px" class="my-3">
    @for (int i = 0; i < Model.McqQuestions.Count; i++)
    {
        string questionClass = Model.McqQuestions[i].SelectedOptionId == -1 ? "unanswered-question" : "answered-question";
        string questionTabId = $"question-tab-{Model.McqQuestions[i].Id}-{Model.McqQuestions[i].QuestionNumber}";
        string questionDivId = $"question-div-{Model.McqQuestions[i].Id}-{Model.McqQuestions[i].QuestionNumber}";
        <div class="@questionClass mb-1" id="@questionTabId" onclick="MoveToPage(@Model.AttemptId, @Model.McqQuestions[i].PageNumber, '@questionDivId')" style="cursor:pointer">
            @Model.McqQuestions[i].QuestionNumber
        </div>
    }
    @for (int i = 0; i < Model.TheoryQuestions.Count; i++)
    {
        string questionClass = string.IsNullOrEmpty(Model.TheoryQuestions[i].Answer) ? "unanswered-question" : "answered-question";
        string questionTabId = $"question-tab-{Model.TheoryQuestions[i].Id}-{Model.TheoryQuestions[i].QuestionNumber}";
        string questionDivId = $"question-div-{Model.TheoryQuestions[i].Id}-{Model.TheoryQuestions[i].QuestionNumber}";
        <div class="@questionClass mb-1" id="@questionTabId" onclick="MoveToPage(@Model.AttemptId, @Model.TheoryQuestions[i].PageNumber, '@questionDivId')" style="cursor:pointer">
            @Model.TheoryQuestions[i].QuestionNumber
        </div>
    }
</div>

<style>
    .answered-question {
        display: inline-block;
        padding: 10px;
        background-color: #580e0e;
        color: white;
        border: 1px solid black;
        min-width: 45px;
        text-align: center;
    }

    .unanswered-question {
        display: inline-block;
        padding: 10px;
        background-color: white;
        color: black;
        border: 1px solid black;
        min-width: 45px;
        text-align: center;
    }
</style>