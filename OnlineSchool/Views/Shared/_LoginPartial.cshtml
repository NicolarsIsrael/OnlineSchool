@using Microsoft.AspNetCore.Identity
@using OnlineSchool.Core 
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@using OnlineSchool.Utility

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        if (User.IsInRole(AppConstant.SuperAdminRole))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="admin" asp-action="index">@User.Identity.Name</a>
            </li>
        }
        else if (User.IsInRole(AppConstant.LecturerRole))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="tutor" asp-action="index">@User.Identity.Name</a>
            </li>
        }
        else if (User.IsInRole(AppConstant.StudentRole))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="course" asp-action="index">@User.Identity.Name</a>
            </li>
        }

        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
