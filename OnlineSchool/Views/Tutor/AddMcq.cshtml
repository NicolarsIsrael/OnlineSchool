@model OnlineSchool.Models.AddMcqModel
@{
    ViewData["Title"] = "Add mcq";
    //Layout = "_AdminLayout";
}
<div class="element-wrapper">
    <div class="my-4">
        <a asp-action="index">Home</a> >> <a asp-action="course" asp-route-id="@Model.CourseId">@Model.CourseCode</a> >>
        <a asp-action="exam" asp-route-id="@Model.ExamId">@Model.ExamTitle</a> >> <span class="breadcrum-link">Add MCQ</span>
    </div>

    <h6 class="element-header my-3">
        Manage Mcq
    </h6>
    <div class="card box-shadow">
        <div class="card-body">
            <h5 class="form-header">Add mcq</h5>
            <hr class="m-1" />
            <form method="post" enctype="multipart/form-data">
                <input asp-for="ExamId" hidden />
                <input asp-for="ExamTitle" hidden />
                <input asp-for="CourseCode" hidden />
                <input asp-for="CourseId" hidden />
                <div class="form-group">
                    <label asp-for="Question" class=""></label>
                    <input asp-for="Question" class="form-control" />
                    <span asp-validation-for="Question" class="text-danger"></span>
                </div>

                <div class="row">
                    @for (int i = 0, j = 1; i < 4; i++, j++)
                    {
                        <div class="form-group col-md-6">
                            <label class="">Option @j</label>
                            <input name="Options[@i].AnsId" hidden value="@i" />
                            <input name="Options[@i].Option" class="form-control" />
                            <span asp-validation-for="Options[i].Option" class="text-danger"></span>
                        </div>
                    }
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label asp-for="AnswerId"></label>
                        <select asp-for="AnswerId" class="form-control">
                            @for (int i = 0, j = 1; i < 4; i++, j++)
                            {
                                <option value="@i">Option @j</option>
                            }
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Score" class=""></label>
                        <input asp-for="Score" class="form-control" />
                        <span asp-validation-for="Score" class="text-danger"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-custom-primary">Add mcq</button>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
