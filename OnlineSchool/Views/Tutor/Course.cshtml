@model OnlineSchool.Models.ViewCourseDetailsModel
@{
    ViewData["Title"] = "Course";
    //Layout = "_AdminLayout";
}
<div class="element-wrapper container">
    <div class="my-4">
        <a asp-action="index">Home</a> >> <a asp-action="course" asp-route-id="@Model.Id">@Model.CourseCode</a> 
    </div>
    <h6 class="element-header mt-4 mb-3">
        <span style="font-size:20px;font-weight:600;">
            @Model.CourseTitle.ToUpper() |
        </span>
        <span style="font-size:17px;font-weight:600">
            @Model.CourseCode | @Model.TutorName
        </span>
    </h6>
    <div class="element-box">
        <div class="card box-shadow">
            <div class="card-body">
                <div style="font-size:14px">
                    @Model.CourseDescription
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-md-6 mb-4">
            <div class="element-box">
                <div class="row">
                    <div class="col-md-12">
                        <h5 class="element-header">
                            Lectures (@Model.NumberOfLectures)
                            <a class="mr-2 mb-2 btn btn-custom-primary btn-sm float-right" asp-action="NewLecture" asp-controller="Tutor" asp-route-id="@Model.Id">New lecture</a>
                        </h5>
                    </div>
                    <div class="col-md-6">
                        <div class="element-actions">

                        </div>
                    </div>

                </div>
                <div class="form-desc mt-3">
                    @{
                        int lectureCount = 1;
                        foreach (var lecture in Model.Lectures)
                        {
                            <div class="logged-user-w avatar-inline">
                                <div class="logged-user-i">
                                    <div class="logged-user-info-w">
                                        <div class="logged-user-name" style="font-size:15px;font-weight:600">
                                            <span>@lectureCount.</span> <span>@lecture.Title.ToUpper()</span>
                                        </div>
                                        <div class="logged-user-role" style="padding-left:20px;font-size:13px">
                                            @lecture.BriefDescription
                                        </div>
                                        <div style="padding:5px 20px">
                                            <a target="_blank" href="@Url.Content(lecture.FilePath)">View resource file</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            lectureCount++;
                        }
                    }
                </div>
            </div>

        </div>
        <div class="col-md-6">
            <div class="element-box">
                <div class="row">
                    <div class="col-md-12">
                        <h5 class="element-header">
                            Exams (@Model.NumberOfExams)
                            <a class="mr-2 mb-2 btn btn-custom-primary btn-sm float-right mb-2" asp-action="NewExam" asp-controller="Tutor" asp-route-id="@Model.Id">New Exam</a>
                        </h5>
                    </div>
                </div>
                <div class="form-desc mt-3">
                    @{
                        int examCount = 1;
                        foreach (var exam in Model.Exams)
                        {
                            <div>
                                <div class="logged-user-name" style="font-size:15px;font-weight:600">
                                    <span>@examCount.</span> <span>@exam.Title.ToUpper()</span>
                                </div>
                                <div style="padding:0 20px">
                                    <div class="pb-3 pt-1">
                                        <div>
                                            Start time : @exam.StartTime
                                        </div>
                                        <div>
                                            Duration: @exam.DurationInMinutes minutes
                                        </div>
                                        <div>
                                            <div>Total score: @exam.TotalScore</div>
                                            <a class="btn btn-sm btn-secondary" asp-action="Exam" asp-controller="Tutor" asp-route-id="@exam.Id">View Questions</a>
                                            <a class="btn btn-sm btn-info" asp-action="EditExam" asp-controller="Tutor" asp-route-id="@exam.Id">Edit Details</a>
                                            <a class="btn btn-sm btn-primary" asp-action="Result" asp-controller="Tutor" asp-route-id="@exam.Id">Results</a>
                                            <hr />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            examCount++;
                        }
                    }

                </div>
            </div>

        </div>
    </div>


