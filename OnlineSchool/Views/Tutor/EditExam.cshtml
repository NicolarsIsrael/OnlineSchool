@model OnlineSchool.Models.EditExamModel
@{
    ViewData["Title"] = "New Exam";
    Layout = "_AdminLayout";
}

<div class="element-wrapper">
    <h6 class="element-header">
        Manage Exam
    </h6>
    <div class="element-box">
        <form method="post" enctype="multipart/form-data">
            <h5 class="form-header">
                Edit Exam
            </h5>
            <input asp-for="CourseId" hidden />
            <input asp-for="ExamId" hidden />
            <div class="form-group">
                <label asp-for="Title" class=""></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoursePerentage" class=""></label>
                <input asp-for="CoursePerentage" class="form-control" />
                <span asp-validation-for="CoursePerentage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DurationInMinute" class=""></label>
                <input asp-for="DurationInMinute" class="form-control" />
                <span asp-validation-for="DurationInMinute" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class=""></label>
                <input asp-for="StartTime" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeadlineEndTime" class=""></label>
                <input asp-for="DeadlineEndTime" class="form-control" />
                <span asp-validation-for="DeadlineEndTime" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Edit exam</button>
        </form>
        </div>
    </div>
        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }
