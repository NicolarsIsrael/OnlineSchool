@model OnlineSchool.Models.EditMcqModel
@{
    ViewData["Title"] = "Edit mcq";
    //Layout = "_AdminLayout";
}

<div class="element-wrapper container">
    <div class="my-4">
        <a asp-action="index">Home</a> >> <a asp-action="course" asp-route-id="@Model.CourseId">@Model.CourseCode</a> >>
        <a asp-action="exam" asp-route-id="@Model.ExamId">@Model.ExamTitle</a> >> <span class="breadcrum-link">Edit MCQ</span>
    </div>

    <h6 class="element-header">
        Manage Mcq
    </h6>
    <div class="card box-shadow my-3">
        <div class="card-body">
            <h5 class="form-header">Edit mcq</h5>
            <hr class="m-1" />
            <form method="post" enctype="multipart/form-data">
                <input asp-for="Id" hidden />
                <input asp-for="ExamId" hidden />
                <input asp-for="ExamTitle" hidden />
                <input asp-for="CourseCode" hidden />
                <input asp-for="CourseId" hidden />
                <div class="form-group">
                    <label asp-for="Question" class=""></label>
                    <input asp-for="Question" class="form-control" />
                    <span asp-validation-for="Question" class="text-danger"></span>
                </div>

                <div class="row">
                    @for (int i = 0, j = 1; i < 4; i++, j++)
                    {
                        <div class="form-group col-md-6">
                            <label class="">Option @j</label>
                            <input asp-for="Options[i].Id" hidden />
                            <input asp-for="Options[i].Option" class="form-control" />
                        </div>
                    }
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label asp-for="AnswerId"></label>
                        <select asp-for="AnswerId" class="form-control">
                            @for (int i = 0, j = 1; i < 4; i++, j++)
                            {
                                if (i == Model.AnswerId)
                                {
                                    <option value="@i" selected>Option @j</option>
                                }
                                else
                                {
                                    <option value="@i">Option @j</option>
                                }

                            }
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Score" class=""></label>
                        <input asp-for="Score" class="form-control" />
                        <span asp-validation-for="Score" class="text-danger"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-custom-primary">Edit mcq</button>
            </form>
        </div>
    </div>
</div>
        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }
